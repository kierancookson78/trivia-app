<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	style="@style/leaderboard_relative_layout_style">

	<LinearLayout
		android:id="@+id/leaderboard_row"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:weightSum="3">

		<com.google.android.material.imageview.ShapeableImageView
			android:id="@+id/pic_col"
			android:layout_width="50dp"
			android:layout_height="50dp"
			android:layout_marginEnd="50dp"
			android:scaleType="center"
			app:shapeAppearanceOverlay="@style/profile_pic_style" />

		<com.google.android.material.textview.MaterialTextView
			android:id="@+id/user_col"
			style="@style/leaderboard_row_style"
			android:layout_weight="1" />

		<com.google.android.material.textview.MaterialTextView
			android:id="@+id/points_col"
			style="@style/leaderboard_row_style"
			android:layout_weight="1" />

		<com.google.android.material.textview.MaterialTextView
			android:id="@+id/rank_col"
			style="@style/leaderboard_row_style"
			android:layout_weight="1" />

	</LinearLayout>
</RelativeLayout>
